#!/bin/sh
# postrm script for qneptunea-ov
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postrm> `remove'
#        * <postrm> `purge'
#        * <old-postrm> `upgrade' <new-version>
#        * <new-postrm> `failed-upgrade' <old-version>
#        * <new-postrm> `abort-install'
#        * <new-postrm> `abort-install' <old-version>
#        * <new-postrm> `abort-upgrade' <old-version>
#        * <disappearer's-postrm> `disappear' <overwriter>
#          <overwriter-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    purge|remove|failed-upgrade|abort-install|abort-upgrade|disappear)

        ## Remove sqlite QNeptunea user data db
        /usr/bin/aegis-exec -s -u user /bin/rm -rf /home/user/.local/share/data/QNeptunea/ || true
        ## Remove QNeptunea avatar cache
        /usr/bin/aegis-exec -s -u user /bin/rm -rf /home/user/.cache/qneptunea/ || true

        if [ -f "/etc/skel/.profile" ]; then
          source /etc/skel/.profile
          if [ -f "/tmp/session_bus_address.user" ]; then
              ## Remove notifications from device event feed
              qdbus com.nokia.home.EventFeed /eventfeed com.nokia.home.EventFeed.removeItemsBySourceName string:'QNeptunea'
          fi
        fi

        ## Remove mimetypes that were added for QNeptunea

        DEFAULT_MIMETYPES_FILE='/usr/share/applications/defaults.list'
        MIMETYPE_STR1='x-maemo-highlight\/qneptunea-url=qneptunea_harmattan.desktop'
        MIMETYPE_STR2='x-maemo-urischeme\/qneptunea=qneptunea_harmattan.desktop'
        if [ -f $DEFAULT_MIMETYPES_FILE ]; then
           if grep -qs $MIMETYPE_STR1 $DEFAULT_MIMETYPES_FILE
           then
                sed -i "/"$MIMETYPE_STR1"/ d"  $DEFAULT_MIMETYPES_FILE
           fi

           if grep -qs $MIMETYPE_STR2 $DEFAULT_MIMETYPES_FILE
           then
                sed -i "/"$MIMETYPE_STR2"/ d"  $DEFAULT_MIMETYPES_FILE
           fi
        fi

        echo "Updating desktop database"
        update-desktop-database
    ;;

    upgrade)
        ## Don't remove database on upgrade, if it really needed (DB format changed) do it then in postinst
        touch /tmp/qneptunea.upgrade
    ;;

    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

exit 0
